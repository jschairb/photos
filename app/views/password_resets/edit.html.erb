<h1>Change my password</h1>
 
<% labelled_form_for @user, :url => password_reset_path(@user.perishable_token), 
                            :method => :put do |f| %>
  <%= f.error_messages %>
  <%= f.password_field :password %>
  <%= f.password_field :password_confirmation %>
  <%= f.submit "Update" %>
<% end %>
